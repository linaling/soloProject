<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED7D31">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/setting_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/solo_logo"></ImageView>


    <ImageView
        android:id="@+id/setting_btn"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/setting"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp" />

    <ImageView
        android:id="@+id/select_take_picture"
        android:layout_width="139dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:src="@drawable/takeapicture" />

    <ImageView
        android:id="@+id/select_load_data"
        android:layout_width="139dp"
        android:layout_height="142dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:src="@drawable/loaddata" />

</RelativeLayout>